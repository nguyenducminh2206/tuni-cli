{
    "data": {
        "path": "data_7x7",
        "x_cols": ["time_trace", "cMax", "cVar"], 
        "y_col": "dis_to_target",
        "sequence_mode": "split",
        "balance": true
    },

    "model": {
        "mlp": {
            "type": "mlp",
            "hidden_layers": [128, 128],
            "activation": "relu",
            "solver": "adam",
            "learning_rate_init": 0.001,
            "alpha": 0.0001,
            "batch_size": "auto"
        },
        "cnn": {
            "type": "cnn",
            "channels": [16, 32],
            "kernel_size": 5,
            "pool": 2,
            "fc": 128,
            "epochs": 15,
            "lr": 0.001,
            "batch_size": 64
        }
    },
    "train": {
        "test_size": 0.2,
        "random_state": 42,
        "max_iter": 500,
        "standardize": true
    },
    "output": {
        "dir": "outputs",
        "show_report": true
    }
}